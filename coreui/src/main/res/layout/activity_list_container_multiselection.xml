<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <carbon.widget.EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/close"
            android:background="@color/grayLight"
            android:hint="@string/searchFor"
            android:gravity="right"
            android:textSize="@dimen/largeTextSize"
            android:padding="@dimen/halfMarginStandard"
            android:layout_margin="@dimen/marginStandard"
            app:carbon_cornerRadius="@dimen/marginStandard"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/_30sdp"
            android:src="@drawable/search_colos"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/search"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="@+id/search"
            app:layout_constraintBottom_toBottomOf="@+id/search"
    />
    <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/_20sdp"
            android:src="@drawable/close_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/marginStandard"
            app:layout_constraintTop_toTopOf="@+id/search"
            app:layout_constraintBottom_toBottomOf="@+id/search"
    />
    <FrameLayout
            android:id="@+id/containerList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search"
            app:layout_constraintBottom_toTopOf="@+id/select"
    >
    </FrameLayout>
    <carbon.widget.TextView
            android:id="@+id/select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/select"
            android:layout_marginTop="@dimen/doubleMarginStandard"
            style="@style/buttonStyle"
    />

</androidx.constraintlayout.widget.ConstraintLayout>